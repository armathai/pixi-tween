{
    "compilerOptions": {
        "target": "es5",
        "module": "AMD",
        "outFile": "bin/pixi-tween.js",
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "files": ["node_modules/gsap/dist/gsap.min.js", "node_modules/gsap/dist/PixiPlugin.min.js"],
    "exclude": [
        "node_modules/**/*",
        "bin/*",
        "src/__examples__/ts/**/*.ts",
        "src/__test__/**/*.ts",
        "src/__test__/*.ts"
    ]
}
